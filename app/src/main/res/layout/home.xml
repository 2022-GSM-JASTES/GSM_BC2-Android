<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

     <TextView
        android:id="@+id/xml_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gmarketbold"
        android:includeFontPadding="false"
        android:paddingTop="35dp"
        android:text="\n안녕하세요!!"
        android:textColor="@color/white"
        android:textSize="24dp"
        app:layout_constraintLeft_toLeftOf="@+id/point_block"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/point_block"
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_height="180dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/square"

        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/game"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/button"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintTop_toBottomOf="@+id/point_block"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="채굴해서 포인트 얻기"
        android:textColor="@color/background_color"
        android:fontFamily="@font/gmarketbold"
        android:textSize="18dp"
        />

    <TextView
        android:id="@+id/point_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BC2 Point"
        android:textColor="@color/background_color"
        android:fontFamily="@font/gmarketbold"
        android:textSize="8pt"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        app:layout_constraintTop_toTopOf="@+id/point_block"
        app:layout_constraintLeft_toLeftOf="@+id/point_block"
    />
    <TextView
        android:id="@+id/current_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:fontFamily="@font/spoqabold"
        android:textSize="45dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/point_desc"
        app:layout_constraintLeft_toLeftOf="@+id/point_block"
        android:paddingTop="15dp"
        android:paddingLeft="15dp"
        android:includeFontPadding="false"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="원"
        android:fontFamily="@font/spoqabold"
        android:textSize="30dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/current_money"
        app:layout_constraintLeft_toRightOf="@+id/current_money"
        android:paddingLeft="5dp"
        android:includeFontPadding="false"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="20dp"
        android:text="결제하기"
        android:fontFamily="@font/gmarketbold"
        android:textColor="@color/background_color"
        android:textSize="18dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/user_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        app:layout_constraintBottom_toTopOf="@+id/payment"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="20dp"
        android:text="user"
        android:fontFamily="@font/gmarketbold"
        android:textColor="@color/background_color"
        android:textSize="18dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>